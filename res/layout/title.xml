<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_ll"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#0B6201"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin" >

    <ImageView
        android:id="@+id/title_img_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cart_left" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="当季水果"
        android:textColor="@color/textyellow"
        android:textSize="@dimen/textSize_sll" />
    
    <View style="@style/view_vertical"/>

    <ImageView
        android:id="@+id/title_img_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bzzn"
        android:visibility="gone"
        
         />

</LinearLayout>