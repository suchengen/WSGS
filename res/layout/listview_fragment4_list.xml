<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/fragment4_imageview_pic"
                android:layout_width="@dimen/image90"
                android:layout_height="@dimen/image90"
                android:layout_marginLeft="@dimen/martop10"
                android:src="@drawable/iv_rou" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/fragment4_textview_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:text="水果名字"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_ss" />

            <TextView
                android:id="@+id/fragment4_textview_price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="￥45.00"
                android:gravity="center_vertical"
                android:textColor="@color/red"
                android:textSize="@dimen/textSize_ss" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/fragment4_imageview_cut"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/edit_product_num_des_selector" />

                <EditText
                    android:id="@+id/fragment4_edittext_number"
                    android:layout_width="@dimen/martop20"
                    android:layout_height="@dimen/martop20"
                    android:layout_marginLeft="4dip"
                    android:layout_marginRight="4dip"
                    android:background="@drawable/cart_product_count_bg"
                    android:clickable="true"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="1"
                    android:textSize="@dimen/textSize_ss" />

                <ImageView
                    android:id="@+id/fragment4_imageview_add"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/edit_product_num_add_selector" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/fragment4_textview_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/martop10"
                android:gravity="center"
                android:text="库存紧张"
                android:textColor="@color/Red"
                android:textSize="@dimen/textSize_ss" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/fragment4_imageview_delete"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="@dimen/martop10"
                    android:layout_marginTop="@dimen/martop10"
                    android:src="@drawable/cart_del" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>