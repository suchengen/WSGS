<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShopDetailActivity" >
    
      <LinearLayout
        android:id="@+id/add_title_ll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#0B6201"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin" >


        <TextView
            android:id="@+id/shopDetail_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="商品详情"
            android:drawableLeft="@drawable/cart_left"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:textColor="@color/textyellow"
            android:textSize="@dimen/textSize_sll" />

        <View style="@style/view_vertical" />

        
    </LinearLayout>
    

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.catdog.view.MyViewPager
                android:id="@+id/detail_viewpager_image"
                android:layout_width="wrap_content"
                android:layout_height="300dp" >
            </com.catdog.view.MyViewPager>

            <LinearLayout
                android:id="@+id/lin_layout_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>

            <TextView
                android:id="@+id/detail_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="2"
                android:padding="@dimen/martop5"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize_mm" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/detail_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/martop5"
                    />

                <View style="@style/view_vertical" />

                <ImageView
                    android:id="@+id/detail_img_reduce"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@drawable/edit_product_num_des_normal" />

                <TextView
                    android:id="@+id/detail_tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/kuang1"
                    android:gravity="center"
                    android:text="1" />

                <ImageView
                    android:id="@+id/detail_img_add"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@drawable/edit_product_num_add_normal" />
            </LinearLayout>

            <View style="@style/view_lines_vertical" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dip"
                        android:text="规格"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSize_ss" />

                    <TextView
                        android:id="@+id/detail_tv_guige"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spdetail"
                        android:gravity="center_horizontal"
                        android:padding="3dip"
                         >
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dip"
                        android:text="销量"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSize_ss" />

                    <TextView
                        android:id="@+id/detail_tv_xiaoliang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spdetail"
                        android:gravity="center_horizontal"
                        android:padding="3dip"
                        >
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="3dip"
                        android:text="评分"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSize_ss" />

                    <TextView
                        android:id="@+id/detail_tv_pingfen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/martop10"
                        android:layout_weight="1"
                        android:background="@drawable/spdetail"
                        android:gravity="center_horizontal"
                        android:padding="3dip"
                        >
                    </TextView>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/martop10"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dip"
                        android:text="库存"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSize_ss" />

                    <TextView
                        android:id="@+id/detail_tv_kucun"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spdetail"
                        android:gravity="center_horizontal"
                        android:padding="3dip"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dip"
                        android:text="结单时间"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSize_ss" />

                    <TextView
                        android:id="@+id/detail_tv_jiedantime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spdetail"
                        android:gravity="center_horizontal"
                        android:padding="3dip"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dip"
                        android:text="发货日期"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSize_ss" />

                    <TextView
                        android:id="@+id/detail_tv_fahuotime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/martop10"
                        android:layout_weight="1"
                        android:background="@drawable/spdetail"
                        android:gravity="center_horizontal"
                        android:padding="3dip"
                        />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/martop10"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text3" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_ll_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/martop5"
                    android:text="用户评价"
                    android:textSize="@dimen/textSize_mm" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/martop10"
                        android:src="@drawable/order_right" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text3" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shopDetail_ll_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/martop5"
                    android:text="商品图片详情"
                    android:textSize="@dimen/textSize_mm" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/martop10"
                        android:src="@drawable/order_right" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text3" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/martop5"
                android:text="您可能感兴趣的商品" />

            <com.catdog.view.MyGridView
                android:id="@+id/shopDetail_gv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.catdog.view.MyGridView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0B6201"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/detail_ll_collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/detail_tv_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/martop10"
                android:drawableLeft="@drawable/sc_selector"
                android:drawablePadding="5dp"
                android:text="点击收藏"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_ll" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right" >

            <Button
                android:id="@+id/detail_btn_buy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#fddc00"
                android:paddingLeft="@dimen/martop10"
                android:paddingRight="@dimen/martop10"
                android:text="立即购买"
                android:textColor="#0B6201"
                android:textSize="@dimen/textSize_ll" />

            <Button
                android:id="@+id/detail_btn_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#fd7d00"
                android:paddingLeft="@dimen/martop10"
                android:paddingRight="@dimen/martop10"
                android:text="加入购物车"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_ll" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>