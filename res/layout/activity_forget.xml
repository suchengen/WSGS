<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foget"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/martop20"
            android:text="找回密码"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_sll" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/martop30"
            android:layout_height="@dimen/martop30"
            android:layout_above="@+id/textView1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="19dp"
            android:src="@drawable/backl" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/martop20"
            android:layout_marginRight="@dimen/martop20"
            android:layout_weight="1"
            android:background="@drawable/login_out"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/martop5" >

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_ll" />

            <EditText
                android:id="@+id/forget_et_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/martop10"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="请输入11位手机号码"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_mm" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/martop20"
            android:layout_marginRight="@dimen/martop20"
            android:layout_marginTop="@dimen/martop10"
            android:layout_weight="1"
            android:background="@drawable/login_out"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="@dimen/martop5"
            android:paddingLeft="@dimen/martop5"
             >

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验  证  码"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_ll" />

            <EditText
                android:id="@+id/forget_et_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/martop10"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_mm" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/martop5"
                android:src="@color/white" />

            <Button
                android:id="@+id/forget_tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/martop5"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_mm" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/martop20"
            android:layout_marginRight="@dimen/martop20"
            android:layout_marginTop="@dimen/martop10"
            android:layout_weight="1"
            android:background="@drawable/login_out"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/martop5" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新  密  码"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_ll" />

            <EditText
                android:id="@+id/forget_et_pwd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/martop10"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:textColor="@color/white"
                android:hint="请输入6-20位密码"
                android:textSize="@dimen/textSize_mm" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/martop20"
            android:layout_marginRight="@dimen/martop20"
            android:layout_marginTop="@dimen/martop10"
            android:layout_weight="1"
            android:background="@drawable/login_out"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/martop5" >

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认密码"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_ll" />

            <EditText
                android:id="@+id/forget_et_pwd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/martop10"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@null"
                android:ems="10"
                android:hint="请输入6-20位密码"
                android:textSize="@dimen/textSize_mm" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/forget_btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/martop20"
            android:layout_marginRight="@dimen/martop20"
            android:layout_marginTop="@dimen/martop20"
            android:text="确认"
            android:textSize="@dimen/textSize_ll" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>