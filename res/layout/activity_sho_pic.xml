<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShoPicActivity" >
    
      <LinearLayout
        android:id="@+id/add_title_ll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#0B6201"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin" >

		<TextView
            android:id="@+id/shopPic_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="商品详情"
            android:drawableLeft="@drawable/cart_left"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:textColor="@color/textyellow"
            android:textSize="@dimen/textSize_sll" />
          
        
    </LinearLayout>
    
	<WebView 
	    android:id="@+id/webview"
	    android:layout_below="@+id/add_title_ll"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    />

</RelativeLayout>
